<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.ap.parentcontrollauncher.HomeScreen"
    android:orientation="vertical">

    <DigitalClock
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="65sp"
        android:autoText="false" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/trackerLog"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:maxLines="200"
            android:scrollbars="vertical"
        />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS App"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:src="@drawable/messageicon"
            android:id="@+id/SmsButton"
            android:layout_marginLeft="30dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call App"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:src="@drawable/phoneicon"
            android:id="@+id/CallButton"

            android:layout_marginLeft="30dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact App"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:src="@drawable/usericon"
            android:id="@+id/ContactButton"

            android:layout_marginLeft="30dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call App"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:src="@drawable/browsericon"
            android:id="@+id/BrowserBtn"

            android:layout_marginLeft="30dp"
            />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps"
            android:id="@+id/AppButton"
            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:src="@drawable/menuicon"

            android:layout_marginLeft="45dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearLogButton"

            android:background="@drawable/abc_ab_bottom_transparent_light_holo"
            android:layout_marginLeft="50dp"
            />


    </LinearLayout>

</LinearLayout>

