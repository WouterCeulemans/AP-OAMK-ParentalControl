<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.ap.parentcontrollauncher" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:clearTaskOnLaunch="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:stateNotNeeded="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="be.ap.parentcontrollauncher.HomeScreen"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- The following two intent-filters are the key to set homescreen -->
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.ap.parentcontrollauncher.DisplayAppsScreen"
            android:label="@string/title_activity_display_apps_screen"
            android:parentActivityName="be.ap.parentcontrollauncher.HomeScreen"
            android:theme="@style/Theme.Base.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.ap.parentcontrollauncher.HomeScreen" />
        </activity>
        <activity
            android:name="be.ap.parentcontrollauncher.SelectAppsScreen"
            android:label="@string/title_activity_select_apps_screen"
            android:parentActivityName="be.ap.parentcontrollauncher.DisplayAppsScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.ap.parentcontrollauncher.DisplayAppsScreen" />
        </activity>

        <provider
            android:name=".contentprovider.ParentControlContentProvider"
            android:authorities="be.ap.parentcontrollauncher.contentprovider" >
        </provider>
        
        <receiver android:name="PackageReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".LocationService"></service>
    </application>

</manifest>
